{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/ngx-filemanager-api-firebase-demo",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2018"],
    "paths": {
      "ngx-filemanager-core": ["../../dist/ngx-filemanager-core"]
    }
  },
  "exclude": ["src/test.ts", "**/*.spec.ts"]
}
